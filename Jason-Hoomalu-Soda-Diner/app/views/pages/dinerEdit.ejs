<%- include('../partials/head') %>

<body>

  <%- include('../partials/header') %>

  <section>
    <div class="info-box text-white my-3">
      <h3 class="list-info"><%= data.name %></h3>
      <h3 class="list-info"><%= data.location %></h3>
    </div>

    <div class="info-box text-white">
      <p class="my-1 p-1 fs-4 text-center">Please enter the updated information for this diner:</p>
      <form method="POST">
        <label for="name">Name:</label>
        <input class="form-control my-2" type="text" value="<%=data.name%>" name="name" placeholder="New name...">
        <label for="location">Location:</label>
        <input class="form-control my-2" type="text" value="<%=data.location%>" name="location" placeholder="New location...">
        <button class="btn btn-primary my-2" type="submit">Update Diner</button>
      </form>
    </div>
  </section>


  <%- include('../partials/footer') %>