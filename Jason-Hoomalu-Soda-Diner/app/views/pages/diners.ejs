<%- include('../partials/head') %>

<body>
    <%- include('../partials/header') %>

    <main>

        <div class="info-box text-white info-served mt-5">
            <h3 class="my-1 text-center">Please select a diner for more information</h3>
            <hr>
            <hr>
            <% data.forEach((e, i) => { %>
            <a class="list-tag" href="diners/<%=e._id%>">
                <p data-new-diner="<%=e.justAdded%>" data-updated-diners="<%=e.justUpdated%>" class="list-tag-name">
                    <%=e.name%></p>
                <% }) %>
            </a>
            <hr>
        </div>
        <a href="/diners-new"><button class="btn btn-primary list-btn my-3">Add New Diner</button></a>
    </main>

    <%- include('../partials/footer') %>